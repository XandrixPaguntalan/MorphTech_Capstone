<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c3939"
    tools:context=".nextflu">

    <TextView
        android:id="@+id/textView174"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="- Wash your hands regularly"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="@+id/textView172"
        app:layout_constraintTop_toTopOf="@+id/textView172" />

    <TextView
        android:id="@+id/textView175"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="- Strengthen your immune system"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="@+id/textView172"
        app:layout_constraintTop_toTopOf="@+id/textView172" />

    <TextView
        android:id="@+id/textView176"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="- Get an annual flu vaccination"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="@+id/textView172"
        app:layout_constraintTop_toTopOf="@+id/textView172" />

    <TextView
        android:id="@+id/textView177"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="- Clean and disinfect surfaces"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="@+id/textView172"
        app:layout_constraintTop_toTopOf="@+id/textView172" />

    <TextView
        android:id="@+id/textView178"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="- Visit the doctor if flu symptoms arise"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="@+id/textView172"
        app:layout_constraintTop_toTopOf="@+id/textView172" />

    <TextView
        android:id="@+id/textView172"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to prevent Flu?"
        android:textColor="#d67c31"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

    <TextView
        android:id="@+id/textView173"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="- Avoid large crowds"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="@+id/textView172"
        app:layout_constraintTop_toTopOf="@+id/textView172" />
</androidx.constraintlayout.widget.ConstraintLayout>