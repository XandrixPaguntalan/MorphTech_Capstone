<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background='#3c3939'
    tools:context=".wrong">

    <Button
        android:id="@+id/butt13"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:backgroundTint="#fff"
        android:text="list of personal protective equipment"
        android:textColor="#d67c31"
        app:layout_constraintEnd_toEndOf="@+id/textView201"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView201"
        app:layout_constraintTop_toTopOf="@+id/textView201" />

    <Button
        android:id="@+id/butt12"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:backgroundTint="#fff"
        android:text="list of viral diseases"
        android:textColor="#d67c31"
        app:layout_constraintEnd_toEndOf="@+id/textView201"
        app:layout_constraintStart_toStartOf="@+id/textView201"
        app:layout_constraintTop_toTopOf="@+id/textView201" />

    <TextView
        android:id="@+id/textView201"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:text="You chose the wrong answer, Please review and answer again."
        android:textColor="#d67c31"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116" />

</androidx.constraintlayout.widget.ConstraintLayout>